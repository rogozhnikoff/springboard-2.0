.ui-input {
  background: white;
  height: 49px - 15;
  padding: 15px 15px 0 20px;
  border: 1px solid;
  border-color: #c9c9c9 #dcdcdc #e6e6e6;
  border-radius: 3px;
  cursor: text;
  font: 18px/1 Calibri;
  position: relative;

  &__el {
    display: block;
    width: 100%;
    height: 100%;
    background: none;
    padding: 0;
    text-indent: 0;
    border: none;
    outline: none;
    color: #3e454f;
    font: inherit;
    height: 18px + 4;
  }

  &._focus {
    border-color: darken(#c9c9c9, 10) darken(#dcdcdc, 10) darken(#e6e6e6, 10);
  }
}