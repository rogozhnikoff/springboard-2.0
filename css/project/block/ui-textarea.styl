.textarea {
  background: white;
  padding: 0 0 0 11px;
  border: 1px solid;
  border-color: #c9c9c9 #dcdcdc #e6e6e6;
  box-shadow: inset 0 1px 1px rgba(120,120,120, .1);
  border-radius: 3px;
  cursor: text;
  margin: 0 0 9px;

  &__el {
    placeholder: #a4a4a4;
    display: block;
    width: 100%;
    height: 38px + 3;
    background: none;
    padding: 10px 0;
    text-indent: 0;
    border: none;
    outline: none;
    color: #3e454f;

    font: 14px/1 Arial;
    resize: none;
  }

  &._focus{
    border-color: darken(#c9c9c9, 10) darken(#dcdcdc, 10) darken(#e6e6e6, 10);
  }
}