
// Titles
h1, h2, h3, h4, h5, h6 {
  font: bold 18px / 1.2 f-sansserif;
  color: textColor;

  small {
    font-size: 65%;
  }
}

h1 {
  font-size: 37px;
  margin: 27px 0 18px;
}

h2 {
  font-size: 22px;
  margin: 21px 0 14px;
}

h3 {
  font-size: 18px;
  margin: 15px 0 10px;
}

h4 {
  font-size: 16px;
  margin: 5px 0 6px;
}

h5 {
  font-size: 14px;
  margin: 8px 0 5px;
}

h6 {
  font-size: 13px;
  margin: 5px 0 3px;
  font-weight: normal;
  text-transform: uppercase;
}

// links
a {
  href();

  &:hover,
  &:active {
    outline: 0;
  }
  &:focus {
    outline: thin dotted;
  }
}

// images
img {
  max-width: 100%;
  height: auto;
  border: 0;
  -ms-interpolation-mode: bicubic;
}

// inline text elements
i,
em {
  font-style: italic;
  font-weight: inherit;
}

b,
strong {
  font-style: inherit;
  font-weight: bold;
}

big {
  font-size: 120%;
}

small {
  font-size: 85%;
}

sub,
sup {
  font-size: 75%;
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}

sup {
  top: -5px;
}

sub {
  bottom: -25px;
}

// lists
ul {
  list-style: none;
  list-style-image: none;
}

// tables
th {
  font-weight: bold;
  vertical-align: middle;
}

td {
  vertical-align: top;
}

blockquote {
  border-left: 5px solid #e1e1e1;
  padding: 0 0 0 8px;
  margin: 13px 0 26px;

  font: italic 13px/1.2 f-sansserif;
  color: gray;

  p {
    margin: 0 0 1px;
  }
}

// content



article {
  font-size: basefont + 1;

  p {
    margin: 4px 0 7px;
  }

  ul,
  ol {
    padding: 0;
    margin: 0 0 floor(x-baseline / 2) 25px;
  }

  ul ul,
  ul ol,
  ol ol,
  ol ul {
    margin-bottom: 0;
  }

  ul {
    list-style: disc;
  }

  ol {
    list-style: decimal;
  }

  li {
    line-height: x-baseline;
  }

  hr {
    margin: x-baseline 0;
    border: 0;
    border-top: 1px solid darken(gray, 20);
    border-bottom: 1px solid lighten(gray, 20);
  }
}

// for debug
pre {
  background-color: lighten(gray, 75);
  display: block;
  padding: 7px;
  margin: 0 0 x-baseline;
  line-height: 1.4;
  font-family: Lucida Console, Courier New, Courier, monospaced;
  font-size: basefont - 1;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, .15);
  white-space: pre;
  white-space: pre-wrap;
  word-wrap: break-word;
  border-radius: 4px;

  code {
    padding: 0;
    color: inherit;
    background-color: transparent;
    border: 0;
  }
}